{
    "default": {
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "test/features/**/login.feature"
        ],
        "dryRun": false,
        "require": [
            "test/steps/**/*.ts",
            "src/hooks/**/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:reports/test-results/cucumber-report.html",
            "json:reports/test-results/cucumber-report.json",
            "rerun:@rerun.txt"
        ],
        "parallel": 2
    },
    "rerun": {
        "strict": true,
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "test/features/*.feature"
        ],
        "dryRun": false,
        "require": [
            "test/steps/*.ts",
            "src/hooks/hooks.ts"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [
            "progress-bar",
            "html:reports/test-results/cucumber-report.html",
            "json:reports/test-results/cucumber-report.json",
            "rerun:@rerun.txt"
        ],
        "parallel": 2
    }
}